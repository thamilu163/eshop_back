# ============================================
# BACKEND ENVIRONMENT VARIABLES
# Spring Boot 4 + Java 21
# ============================================

# ─────────────────────────────────────────────
# APPLICATION
# ─────────────────────────────────────────────
SPRING_PROFILES_ACTIVE=docker

# ─────────────────────────────────────────────
# DATABASE - PostgreSQL
# ─────────────────────────────────────────────
POSTGRES_DB=eshop_db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres

# ─────────────────────────────────────────────
# DATABASE - Read Replicas (Optional)
# ─────────────────────────────────────────────
# Enable read replicas for horizontal scaling
READ_REPLICAS_ENABLED=false
# Comma-separated URLs for multiple replicas
READ_REPLICA_URL=jdbc:postgresql://read-replica-1:5432,read-replica-2:5432,read-replica-3:5432/eshop_db
READ_REPLICA_USERNAME=postgres
READ_REPLICA_PASSWORD=your_replica_password_here

# ─────────────────────────────────────────────
# REDIS CACHE (Docker Service)
# ⚠️ For Docker: Use service name 'redis'
# ⚠️ For local dev: Use 'localhost'
# ─────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ─────────────────────────────────────────────
# KEYCLOAK - Authentication Server
# ─────────────────────────────────────────────
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_ISSUER_URI=http://keycloak:8080/realms/eshop
KEYCLOAK_JWK_URI=http://keycloak:8080/realms/eshop/protocol/openid-connect/certs

# ─────────────────────────────────────────────
# MONITORING - Distributed Tracing
# ─────────────────────────────────────────────
# Zipkin endpoint for trace collection
ZIPKIN_ENDPOINT=https://zipkin.example.com/api/v2/spans

# ─────────────────────────────────────────────
# PAYMENT GATEWAYS
# ─────────────────────────────────────────────
# Stripe
STRIPE_API_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=live

# Razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ─────────────────────────────────────────────
# EMAIL SERVICE
# ─────────────────────────────────────────────
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=noreply@eshop.com

# ─────────────────────────────────────────────
# CLOUDINARY IMAGE STORAGE
# ─────────────────────────────────────────────
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ─────────────────────────────────────────────
# GOOGLE MAPS API
# ─────────────────────────────────────────────
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ─────────────────────────────────────────────
# SECURITY
# ─────────────────────────────────────────────
# Virus scanning (optional)
VIRUS_SCAN_ENABLED=false

# ─────────────────────────────────────────────
# AUDIT LOGGING
# ─────────────────────────────────────────────
AUDIT_LOG_READS=false

# ─────────────────────────────────────────────
# OBSERVABILITY
# ─────────────────────────────────────────────
# New Relic APM (optional for Week 7-8)
# NEW_RELIC_LICENSE_KEY=your_license_key
# NEW_RELIC_APP_NAME=eshop-backend

# Datadog APM (optional for Week 7-8)
# DD_API_KEY=your_datadog_api_key
# DD_SERVICE=eshop-backend
# DD_ENV=production
